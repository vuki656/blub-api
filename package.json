{
    "name": "@blub/api",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "generate": "ts-node ./generator",
        "dev": "nodemon",
        "start": "NODE_ENV=production node 'dist/index.js'",
        "build": "webpack",
        "schema:build": "ts-node './src/server/generateSchemaFile.ts'",
        "orm:generate": "prisma generate",
        "orm:sync": "prisma db pull && prettier --write './src/database/schema.prisma'",
        "database:setup": "docker-compose --env-file .env.example run --rm migration",
        "database:seed": "prisma db seed",
        "database:migrate": "docker-compose run --no-deps --rm migration",
        "test": "yarn orm:generate && yarn test:setup && yarn test:run",
        "test:codegen": "yarn graphql-codegen --config='./src/tests/integration/codegen.yml'",
        "test:setup": "yarn schema:build && yarn test:codegen",
        "test:run": "yarn test:integration",
        "test:integration": "jest --config='./src/tests/integration/jest.config.js' --runInBand",
        "test:single": "jest './src/tests/integration/__tests__/resolvers/Post.test.ts' --config='./src/tests/integration/jest.config.js'",
        "lint": "yarn lint:config & yarn lint:spell & yarn lint:source",
        "lint:ci": "yarn orm:generate && yarn lint",
        "lint:source": "eslint './src/**/*.{ts,js}' --quiet --cache --fix --cache-strategy='content' --cache-location='.eslintcache/'",
        "lint:config": "prettier --loglevel warn --check {*,**/*}.{json,yml,yaml}",
        "lint:spell": "cspell lint '**' --no-summary --no-progress"
    },
    "dependencies": {
        "@prisma/client": "^4.5.0",
        "apollo-server": "^3.11.1",
        "dayjs": "^1.11.6",
        "dotenv": "^16.0.3",
        "envalid": "^7.3.1",
        "graphql": "15.3.0",
        "pino": "^8.7.0",
        "reflect-metadata": "^0.1.13",
        "tsyringe": "^4.7.0",
        "type-graphql": "^1.1.1",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.6.0",
        "@graphql-codegen/cli": "^2.13.11",
        "@graphql-codegen/gql-tag-operations-preset": "^1.7.0",
        "@rimac-technology/eslint-config": "^31.1.0",
        "@types/jest": "^29.2.2",
        "@types/node": "18.11.9",
        "@types/uuid": "^8.3.4",
        "@types/validator": "^13.7.10",
        "@types/webpack-node-externals": "^2.5.3",
        "class-validator": "^0.13.2",
        "cspell": "^6.14.0",
        "eslint": "8.26.0",
        "generate-template-files": "^3.2.1",
        "jest": "^29.2.2",
        "nodemon": "^2.0.20",
        "pino-pretty": "^9.1.1",
        "prettier": "^2.7.1",
        "prettier-plugin-prisma": "^4.4.0",
        "prisma": "^4.5.0",
        "ts-jest": "^29.0.3",
        "ts-loader": "^9.4.1",
        "ts-node": "^10.9.1",
        "typescript": "4.8.4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-node-externals": "^3.0.0"
    },
    "prisma": {
        "schema": "./src/database/schema.prisma",
        "seed": "ts-node ./src/database/seed/index.ts"
    },
    "packageManager": "yarn@3.2.4"
}
